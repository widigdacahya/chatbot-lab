<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_sender_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="#26a69a"
        android:padding="16dp"
        android:textSize="16sp"
        tools:text="The quick brown fox jumps over the lazy dog The quick brown fox jumps over the lazy dog"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_bot_message"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:background="@drawable/received_round_box"
        android:backgroundTint="#ff7043"
        android:padding="16dp"
        android:textColor="@color/white"
        tools:text="The quick brown fox jumps over the lazy dog The quick brown fox jumps over the lazy dog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>




</RelativeLayout>